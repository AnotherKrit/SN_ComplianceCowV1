        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	gs.info("Started Business Rule");
	// Add your code here
	try { 
		var r = new sn_ws.RESTMessageV2('x_1507800_complian.Start assessment', 'Default POST');

		var reqBody = "{\"name\": \"Krit Testing - ServiceNow " + Date.now() + "\", \"description\": \"Krit Test for ServiceNow\", \"assessmentId\": \"" + current.assessment_id.id + "\", \"appScopeId\": \"" + current.assessment_id.applicationscopeid + "\", \"fromDate\": \"08/01/2024\", \"toDate\": \"08/31/2024\",\"tags\": \"github\"}";

		r.setRequestBody(reqBody);

		var response = r.execute();
		var responseBody = response.getBody();
		var httpStatus = response.getStatusCode();
		
		if (httpStatus == 201){
			var jsonBody = JSON.parse(responseBody);
			current.assessment_run_id = jsonBody.id;
			current.request_status = "Started";
			current.update();
		}

	}
	catch(ex) {
		var message = ex.message;
		gs.debug("Error : " + message);
	}

})(current, previous);]]></script>
